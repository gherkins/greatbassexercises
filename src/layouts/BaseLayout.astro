---
const {content} = Astro.props;
import 'bootstrap/dist/css/bootstrap.min.css'
import bootstrap from "bootstrap/dist/js/bootstrap.bundle.min.js?url";
import './BaseLayout.scss'
---

<html lang="en">
    <head>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-HHVHTMJQEC"></script>
        <script>
            window.dataLayer = window.dataLayer || []

            function gtag() {
                dataLayer.push(arguments)
            }

            gtag('js', new Date())
            gtag('config', 'G-HHVHTMJQEC', {'anonymize_ip': true})

        </script>
        <meta charset="utf-8" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#000000" />
        <meta name="description" content={content.description} />
        <link rel="manifest" href="/manifest.json" />
        <link rel="apple-touch-icon" href="/icon512.png" />
        <meta property="og:site_name" content="greatbassexercises.com">
        <meta property="og:url" content="http://greatbassexercises.com/">
        <meta property="og:title" content={content.title}>
        <meta property="og:description" content={content.description}>
        <meta property="og:image" content="https://greatbassexercises.com/icon512.png">
        <link rel="sitemap" href="/sitemap-index.xml">
        <title>{content.title}</title>
    </head>
    <body>

        <header>
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" href="/">GreatBassExercises.com</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/about/">About</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    All Exercises
                                </a>
                                <div class="dropdown-menu">
                                    <p class="px-3 text-muted mb-0">Arpeggios:</p>
                                    <a class="dropdown-item" href="/arpeggio/tarantula">C Minor Tarantula</a>
                                    <a class="dropdown-item" href="/arpeggio/tarantula-desc">C Minor Tarantula Descending</a>
                                    <div class="dropdown-divider"></div>
                                    <p class="px-3 text-muted mb-0">Chords:</p>
                                    <a class="dropdown-item" href="/chords/g-major-10ths">G Major 10th Chords</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        <main>
            <div class="container mt-5 mb-5">
                <slot />
            </div>
        </main>

        <script src={bootstrap}></script>
    </body>
</html>
